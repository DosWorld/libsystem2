all : DOS DPMI

DOS: SYSTEM2.TPU WINCB.TPU STRBIN.TPU ARGS.TPU DBU.TPU RC4.TPU ANSI.TPU
DPMI: SYSTEM2.TPP WINCB.TPP STRBIN.TPP ARGS.TPP DBU.TPP RC4.TPP ANSI.TPP

SYSTEM2.TPU: SYSTEM2.PAS SYSEMS.PAS SYSXMS.PAS SYSMEM.PAS
	tpc /m SYSTEM2.PAS

SYSTEM2.TPP: SYSTEM2.PAS SYSMEM.PAS
	bpc /m /cp SYSTEM2.PAS

WINCB.TPU: WINCB.PAS
	tpc /m WINCB.PAS

WINCB.TPP: WINCB.PAS
	bpc /m /cp WINCB.PAS

ARGS.TPU: ARGS.PAS
	tpc /m ARGS.PAS

ARGS.TPP: ARGS.PAS
	bpc /m /cp ARGS.PAS

ANSI.TPU: ANSI.PAS
	tpc /m ANSI.PAS

ANSI.TPP: ANSI.PAS
	bpc /m /cp ANSI.PAS

DBU.TPU: DBU.PAS SYSTEM2.TPU
	tpc /m DBU.PAS
DBU.TPP: DBU.PAS SYSTEM2.TPP
	bpc /m /cp DBU.PAS

RC4.TPU: RC4.PAS
	tpc /m RC4.PAS
RC4.TPP: RC4.PAS
	bpc /m /cp RC4.PAS

STRBIN.TPU: STRBIN.PAS
	tpc /m STRBIN.PAS
STRBIN.TPP: STRBIN.PAS
	bpc /m /cp STRBIN.PAS

clean:
	del *.TPU
	del *.TPP
	del *.BAK
install: all
	copy *.tpu ..\TPU\
	copy *.tpp ..\TPU\

